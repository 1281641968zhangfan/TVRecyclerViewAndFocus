<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tvrecyclerview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.skw.library.TVRecyclerView
        android:id="@+id/recyclerview_grid_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_36px"
        android:background="@color/color_ffffff"
        android:clipToPadding="false"
        tvrecyclerview:drawChildOrderEnable="true"
        android:padding="@dimen/dp_28px"
        tvrecyclerview:isNeedNotifyData="true">

    </com.skw.library.TVRecyclerView>
</FrameLayout>